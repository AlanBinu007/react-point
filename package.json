    "prepublish": "node ./scripts/build.js"
  },
  "peerDependencies": {
    "react": "15.x"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-es2015-loose": "^7.0.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-1": "^6.5.0",
    "gzip-size": "^3.0.0",
    "in-publish": "^2.0.0",
    "pretty-bytes": "^3.0.1",
    "rimraf": "^2.5.4",
    "webpack": "^1.13.1"
  }
}
