{
  "name": "react-point",
  "version": "0.0.1",
  "description": "A minimal click/tap component for React",
  "author": "Michael Jackson",
  "license": "MIT",
  "main": "lib",
  "files": [
    "lib",
    "umd"
  ],
  "scripts": {
    "build-lib": "rimraf lib && babel ./modules -d lib --ignore '__tests__'",
